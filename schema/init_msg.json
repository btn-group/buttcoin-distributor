{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "InitMsg",
  "type": "object",
  "required": [
    "buttcoin",
    "release_schedule",
    "viewing_key"
  ],
  "properties": {
    "buttcoin": {
      "$ref": "#/definitions/SecretContract"
    },
    "release_schedule": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/ScheduleUnit"
      }
    },
    "viewing_key": {
      "type": "string"
    }
  },
  "definitions": {
    "HumanAddr": {
      "type": "string"
    },
    "ScheduleUnit": {
      "type": "object",
      "required": [
        "end_block",
        "release_per_block"
      ],
      "properties": {
        "end_block": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        },
        "release_per_block": {
          "$ref": "#/definitions/Uint128"
        }
      }
    },
    "SecretContract": {
      "type": "object",
      "required": [
        "address",
        "contract_hash"
      ],
      "properties": {
        "address": {
          "$ref": "#/definitions/HumanAddr"
        },
        "contract_hash": {
          "type": "string"
        }
      }
    },
    "Uint128": {
      "type": "string"
    }
  }
}
