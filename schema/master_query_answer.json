{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MasterQueryAnswer",
  "anyOf": [
    {
      "type": "object",
      "required": [
        "config"
      ],
      "properties": {
        "config": {
          "type": "object",
          "required": [
            "admin",
            "buttcoin",
            "schedule",
            "total_weight",
            "viewing_key"
          ],
          "properties": {
            "admin": {
              "$ref": "#/definitions/HumanAddr"
            },
            "buttcoin": {
              "$ref": "#/definitions/SecretContract"
            },
            "schedule": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/ScheduleUnit"
              }
            },
            "total_weight": {
              "type": "integer",
              "format": "uint64",
              "minimum": 0.0
            },
            "viewing_key": {
              "type": "string"
            }
          }
        }
      }
    },
    {
      "type": "object",
      "required": [
        "spy_weight"
      ],
      "properties": {
        "spy_weight": {
          "type": "object",
          "required": [
            "weight"
          ],
          "properties": {
            "weight": {
              "type": "integer",
              "format": "uint64",
              "minimum": 0.0
            }
          }
        }
      }
    },
    {
      "type": "object",
      "required": [
        "pending"
      ],
      "properties": {
        "pending": {
          "type": "object",
          "required": [
            "amount"
          ],
          "properties": {
            "amount": {
              "$ref": "#/definitions/Uint128"
            }
          }
        }
      }
    }
  ],
  "definitions": {
    "HumanAddr": {
      "type": "string"
    },
    "ScheduleUnit": {
      "type": "object",
      "required": [
        "end_block",
        "release_per_block"
      ],
      "properties": {
        "end_block": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        },
        "release_per_block": {
          "$ref": "#/definitions/Uint128"
        }
      }
    },
    "SecretContract": {
      "type": "object",
      "required": [
        "address",
        "contract_hash"
      ],
      "properties": {
        "address": {
          "$ref": "#/definitions/HumanAddr"
        },
        "contract_hash": {
          "type": "string"
        }
      }
    },
    "Uint128": {
      "type": "string"
    }
  }
}
